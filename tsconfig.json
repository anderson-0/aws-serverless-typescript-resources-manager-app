{
  "compilerOptions": {
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "lib": [
      "ESNext"
    ],
    "moduleResolution": "node",
    "removeComments": true,
    "sourceMap": true,
    "target": "ES2020",
    "types": [
      "node",
    ],
    "outDir": "lib"
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules/**/*",
    ".serverless/**/*",
    ".webpack/**/*",
    "_warmup/**/*",
    ".vscode/**/*"
  ],
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ]
  }
}